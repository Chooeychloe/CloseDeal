<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
       >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/top_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/addimg_icon"/>

                    <Button
                        android:layout_marginStart="40dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:text="Read reviews for me"
                        android:drawableLeft="@drawable/ic_star_rate"
                        android:id="@+id/myReviews"
                        android:layout_toRightOf="@id/user_img"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:padding="12dp"
                    android:layout_below="@id/top_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/account_img"
                    android:text="Full name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_marginStart="10dp"
                    android:id="@+id/account_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_icon"
                    android:contentDescription="TODO" />


                <TextView
                    android:id="@+id/phoneno_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_fullname"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:text="Phone no. "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/phoneno_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/phone_icon"
                    android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phoneno_txt"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/email_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phoneno_img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/email_icon"
                    android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/user_bday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_email"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:text="Birthdate"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/bday_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/bday_icon"
                    android:contentDescription="TODO" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:drawableRight="@drawable/ic_read_more"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="2dp"
                        android:id="@+id/guide_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="GUIDE"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/guide_icon" />

                    <Button
                        android:drawableRight="@drawable/ic_read_more"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="2dp"
                        android:layout_below="@id/guide_btn"
                        android:id="@+id/faqs_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@drawable/faqs_icon"
                        android:text="FAQS"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <Button
                        android:drawableRight="@drawable/ic_read_more"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="2dp"
                        android:layout_below="@id/faqs_btn"
                        android:id="@+id/feedback_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@drawable/feedback_icon"
                        android:text="FEEDBACK"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </RelativeLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/safety_protocol_btn"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="sans-serif-black"
                        android:text="Covid-19 Safety Protocol"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="My Posts"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-black"
                        android:id="@+id/title_post"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/safety_protocol_btn" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_post" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
       </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:padding="5dp"
        android:id="@+id/fab"
        android:background="@color/Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/pen_icon"
        android:contentDescription="TODO"></com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>