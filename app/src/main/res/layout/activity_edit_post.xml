<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EditPostActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pImageIv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/add_img_icon"
            android:contentDescription="TODO"></ImageView>

        <EditText
            android:hint="Item Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:inputType="textCapSentences|textMultiLine"
            android:id="@+id/pTitleEt"></EditText>

        <EditText
            android:hint="Desciption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="5"
            android:inputType="textCapSentences|textMultiLine"
            android:id="@+id/pDescriptionEt"></EditText>



        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/Share"
                android:text="For Sharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/Trade"
                android:text="For Trading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RadioGroup>


        <Button
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="Update"
            android:background="@drawable/rounded_button"
            android:id="@+id/post"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            ></Button>

    </LinearLayout>

</ScrollView>