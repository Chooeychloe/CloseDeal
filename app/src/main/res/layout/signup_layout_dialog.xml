<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:padding="6dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:background="@color/Base"
                android:id="@+id/closeBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/close_icon"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv"
                android:layout_below="@id/closeBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/terms_and_condition"
                />

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/tv"
                android:textStyle="italic"
                android:textColor="@color/Base"
                android:textSize="16sp"
                android:layout_below="@id/closeBtn"
                android:layout_toEndOf="@id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By signing up, you agree to the terms and condition of Close Deal application."/>

            <Button
                android:id="@+id/terms_condition_btn"
                android:textSize="10sp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_toStartOf="@+id/okBtn"
                android:layout_below="@id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="See Terms \n and Condition"/>
            <Button
                android:layout_margin="5dp"
                android:id="@+id/okBtn"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>