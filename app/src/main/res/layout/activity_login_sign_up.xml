<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StartUpActivities.LoginSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/welcome_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription"></ImageView>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:src="@drawable/main_logo"
            android:contentDescription="TODO"></ImageView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/login_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_border_login_signup"
                android:backgroundTint="@color/Base"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:transitionName="transition_login"></Button>

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_border_login_signup"
                android:backgroundTint="@color/Base"
                android:text="SIGNUP"
                android:textColor="@color/black"
                android:textSize="18sp"></Button>

        </LinearLayout>

    </LinearLayout>


</ScrollView>